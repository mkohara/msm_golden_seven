<h1>List of Movies</h1>
<a href="/directors">See Directors</a>
<a href="/movies/new_form_movies">New Movie</a>

<table>
  <tr>
    <th>Image</th>
    <th>Title</th>
    <th>Year</th>
    <th>Duration</th>
    <th>Description</th>
  </tr>
  <% @list_of_movies.each do |movie| %>
  <tr>
    <td><img src="<%= movie.image_url %>" alt="Movie Image"></td>

    <td><a href="/movies/<%= movie.id %>"><%= movie.title %></a></td>

    <td><%= movie.year %></td>

    <td><%= movie.duration %> mins </td>

    <td><%= movie.description %></td>
    <td>
      <a href="/movies/<%= movie.id %>">Show</a>
      <a href="/movies/<%= movie.id %>/edit_form_movie">Edit</a>
      <a href="/movies//delete_movie/<%= movie.id %>">Delete</a>
    </td>
  </tr>

  <% end %>
</table>
