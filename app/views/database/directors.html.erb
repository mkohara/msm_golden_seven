<h1>Directors</h1>
<a href="/movies">See Movies</a>
<a href="/directors/new_form_directors">New director</a>

<table>
  <tr>
    <th>Image</th>
    <th>Name</th>
    <th>Bio</th>
    <th>DOB</th>

  </tr>

<%@list_of_directors.each do |director| %>
<tr>
  <td><img src="<%= director.image_url %>" alt="director Image"></td>

  <td> <a href="/directors/<%= director.id %>"> <%= director.name %></a></td>

  <td><%= director.bio %></td>

  <td> <%= director.dob %></td>
  <td>
    <a href="/directors/<%= director.id %>">Show</a>
    <a href="/<%= director.id %>/edit_form_director">Edit</a>
    <a href="/directors/delete_director/<%= director.id %>">Delete</a>
  </td>
</tr>


<%end %>
</table>
